#!/usr/local/bin/php
<?php
require_once 'vendor/autoload.php';
use DI\ContainerBuilder;

$builder = new DI\ContainerBuilder();
$builder->addDefinitions(__DIR__ . '/../cfg/config.php');
$container = $builder->build();
$stack = $container->get("Fiddle\Stack\StackHandler");

$options = getopt("c:n::");
switch ($options["c"]) {
    case 'create':
        array_key_exists("n", $options) ?: $options["n"] = "fiddle";
        $stack->createStack($options["n"]);
        break;
    default:
        printf("Unknown command: %s\n", $command);
        break;
}
