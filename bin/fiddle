#!/usr/local/bin/php
<?php
use DI\ContainerBuilder;
require_once 'vendor/autoload.php';

$command = $argc > 1 ? $argv[1] : "";
$container = DI\ContainerBuilder::buildDevContainer();
$awsClient = new Fiddle\AWS\EC2Client();
$fiddle = new Fiddle\Server\ServerHandler($awsClient);

switch ($command) {
    case 'create-server':
        $fiddle->createServer();
        break;

    default:
        printf("Unknown command: %s\n", $command);
        break;
}
